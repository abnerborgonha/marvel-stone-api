{
  "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "strictPropertyInitialization": false,
      "baseUrl": "./src",
      "paths": {
          "@modules/*": ["modules/*"],
          "@config/*": ["config/*"],
          "@shared/*": ["shared/*"],
          "@mocks/*": ["mocks/*"],
          "@docs/*": ["docs/*"]
      },
      "resolveJsonModule": true,
      "removeComments": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true   
  },
  "exclude": ["jest.config.ts", "dist"]
}